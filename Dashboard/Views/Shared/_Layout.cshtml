<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UofS | @TempData["Title"]</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/dist/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Toastr or similar for popup notifications -->
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />

</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link" role="button">@Context.User.Identity.Name</a>
                </li>
               <!-- Add notification badge somewhere in your layout -->
<li class="nav-item">
    <a class="nav-link" href="#">
        <i class="fas fa-bell"></i>
        <span id="notificationBadge" class="badge bg-danger d-none">0</span>
    </a>
</li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a asp-controller="Login" asp-action="logout" class="nav-link" role="button">
                        Logout
                    </a>
                </li>


            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <center>
                <a href="index3.html" class="brand-link">
                    <span class="brand-text font-weight-light">UofS</span>
                </a>
            </center>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                            data-accordion="false">
                            @if (User.HasClaim("Permission", "ViewDashboard"))
                            {

                                <li class="nav-item active">
                                    <a asp-action="Index" asp-controller="Dashboard" class="nav-link">
                                        <i class="nav-icon fas fa-tachometer-alt"></i> <!-- Dashboard icon -->

                                        <p>Dashboard</p>
                                    </a>
                                </li>

                            }


                            @if (User.HasClaim("Permission", "ViewNotifications"))
                            {
                                <li class="nav-item active">
                                    <a asp-action="Index" asp-controller="PushNotifications" class="nav-link">
                                        <i class="nav-icon fas fa-bell"></i> <!-- Notification icon -->
                                        <p>Notifications</p>
                                    </a>
                                </li>

                            }

                            @if (User.HasClaim("Permission", "ViewServices"))
                            {
                                <li class="nav-item active">
                                    <a asp-action="Index" asp-controller="Services" class="nav-link">
                                        <i class="nav-icon fas fa-concierge-bell"></i> <!-- Services icon -->
                                        <p>Services</p>
                                    </a>
                                </li>

                            }

                            @if (User.HasClaim("Permission", "ViewAnnouncements"))
                            {
                                <li class="nav-item active">
                                    <a asp-action="Index" asp-controller="Announcements" class="nav-link">
                                        <i class="nav-icon fas fa-bullhorn"></i> <!-- Announcements icon -->
                                        <p>Announcements</p>
                                    </a>
                                </li>

                            }



                            <li class="nav-item active">
                                <a class="nav-link" asp-action="Index" asp-controller="CertificateRequests">
                                    <i class="nav-icon fas fa-file-alt"></i> <!-- Certificate document icon -->
                                    <p>Certificate Requests</p>
                                </a>
                            </li>

                            @* <li class="nav-item active">
                                <a class="nav-link" asp-action="Index" asp-controller="TranscriptCertificates">
                                    <i class="nav-icon fas fa-file-alt"></i> <!-- Certificate document icon -->
                                    <p>Transcript Requests</p>
                                </a>
                            </li>

                            <li class="nav-item active">
                                <a asp-action="Index" asp-controller="EnrollmentsCertificates" class="nav-link">
                                    <i class="nav-icon fas fa-file-alt"></i> <!-- Certificate document icon -->
                                    <p>Enrollment Requests</p>
                                </a>
                            </li> *@


                            @if (User.HasClaim("Permission", "ViewStudentsProfiles"))
                            {

                                <li class="nav-item active">
                                    <a asp-action="Index" asp-controller="StudentsProfiles" class="nav-link">
                                        <i class="nav-icon fas fa-user-graduate"></i> <!-- Student profile icon -->
                                        <p>Students Profiles</p>
                                    </a>
                                </li>

                            }


                            @if (User.HasClaim("Permission", "ViewStudentMobiles"))
                            {

                                <li class="nav-item">
                                    <a asp-action="StudentsUsers" asp-controller="Users" class="nav-link">
                                        <i class="nav-icon fas fa-users"></i> <!-- Users icon -->
                                        <p>Students Mobiles</p>
                                    </a>
                                </li>
                            }

                            @if (User.HasClaim("Permission", "ViewSubjectManagement"))
                            {
                                <li class="nav-item active">
                                    <a asp-action="Index" asp-controller="Subjects" class="nav-link">
                                        <i class="nav-icon fas fa-book"></i> <!-- Subject/Book icon -->
                                        <p>Subject Management</p>
                                    </a>
                                </li>

                            }
                            @if (User.HasClaim("Permission", "ViewUsers"))
                            {


                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Users" class="nav-link">
                                        <i class="nav-icon fas fa-users"></i> <!-- Users icon -->
                                        <p>Users</p>
                                    </a>
                                </li>

                            }


                            @if (User.HasClaim("Permission", "ViewSupportTickets"))
                            {
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Supports" class="nav-link">
                                        <i class="nav-icon fas fa-headset"></i> <!-- Support icon -->
                                        <p>Support Tickets</p>
                                    </a>
                                </li>

                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="systemclaims" class="nav-link">
                                        <i class="nav-icon fas fa-key"></i> <!-- Permissions icon -->

                                        <p>System Claims</p>
                                    </a>
                                </li>

                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="roles" class="nav-link">
                                        <i class="nav-icon fas fa-user-shield"></i> <!-- Roles icon -->

                                        <p>System Roles</p>
                                    </a>
                                </li>

                            }




                            @* <li class="nav-item">
                                <a href="#usersSubmenu" data-toggle="collapse" class="nav-link">
                                    <i class="nav-icon fas fa-user-cog"></i> <!-- Admin/User settings icon -->
                                    <p>
                                        Users
                                        <i class="fas fa-angle-down float-right"></i>
                                    </p>
                                </a>
                                <ul class="collapse list-unstyled" id="usersSubmenu">
                                    <li class="nav-item">
                                        <a asp-action="Create" asp-controller="Users" class="nav-link">
                                            <i class="fas fa-user-plus"></i> Add User
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="List" asp-controller="Users" class="nav-link">
                                            <i class="fas fa-list"></i> User List
                                        </a>
                                    </li>
                                </ul>
                            </li> *@

                        </ul>
                    </nav>

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@TempData["Title"]</h1>
                        </div><!-- /.col -->

                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                UDI - Solution
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; @DateTime.Now.Year <a
                    href="https://smart-valley.com">Smart-Valley.com</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/dist/js/all.js"></script>



    <script src="~/lib/toastr.js/toastr.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/dist/js/notificationservice.js"></script>

    @RenderSection("Script", required: false) <!-- Optional section -->

</body>

</html>
