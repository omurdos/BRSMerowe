@using Core.Entities
@model EditStudentViewModel
@{

    var faculties = ViewBag.faculties as List<Faculty>;
    var departments = ViewBag.departments as List<Department>;
    var batches = ViewBag.batches as List<Batch>;
    var programs = ViewBag.programs as List<Program>;
    var otpCodes = ViewBag.lastOTP as OTPCode;
    var studentPayments = ViewBag.StudentPayments as ApiData;

}


<div class="row">
    <div class="col-12">
        <form asp-controller="StudentsProfiles" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="text" hidden asp-for="StudentNumber" />
            <div class="card">
                <div class="card-header">
                    <h5>Edit @Model.StudentName</h5>
                </div>
                <div class="card-body">
                    <div class="container mt-5 text-center">
                        <div class="card p-3 shadow" style="width: 250px; margin: auto;">

                            <img src="@(string.IsNullOrEmpty(Model.PersonalPhoto) ? "/images/user.png" : $"/images/profile/{Model.PersonalPhoto}")" class="img-thumbnail rounded"
                                 id="personalPhoto" alt="Personal Photo">
                            <div class="mb-3">
                                <label for="fileInput" class="form-label">Upload Image</label>
                                <input type="file" class="form-control" id="fileInput"
                                       asp-for="@Model.PersonalPhotoFile" accept="image/*">
                            </div>
                            <div class="mt-3">
                                <button type="button" id="resetButton" class="btn btn-danger">Reset Image</button>
                            </div>
                            <div class="mt-3">
                                <a class="btn btn-success me-2" asp-action="Edit" asp-controller="StudentsProfiles"
                                   asp-route-studentNumber="@Model.StudentNumber" asp-route-decision="approve">
                                    ✅
                                    Approved
                                </a>
                                <a class="btn btn-danger" asp-action="Edit" asp-controller="StudentsProfiles"
                                   asp-route-studentNumber="@Model.StudentNumber" asp-route-decision="reject">
                                    ❌
                                    Reject
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <img src="" />
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="StudentName">Student Name(En)</label>
                                <input type="text" class="form-control" asp-for="StudentName">
                                <span class="text-danger" asp-validation-for="StudentName"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="StudentNameAr">Student Name(Ar)</label>
                                <input type="text" class="form-control" asp-for="StudentNameAr">
                                <span class="text-danger" asp-validation-for="StudentNameAr"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="StudentName">Student Name</label>
                                <input type="text" class="form-control" asp-for="StudentName" disabled>
                                <span class="text-danger" asp-validation-for="StudentName"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="StudentNumber">Student Number</label>
                                <input type="text" class="form-control" asp-for="StudentNumber" disabled>
                                <span class="text-danger" asp-validation-for="StudentNumber"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Department">Department Name</label>
                                <input type="text" class="form-control" asp-for="Department" disabled>
                                <span class="text-danger" asp-validation-for="Department"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Faculty">Faculty Name</label>
                                <input type="text" class="form-control" asp-for="Faculty" disabled>
                                <span class="text-danger" asp-validation-for="Faculty"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <div class="form-check">
                                <input asp-for="IsStudentCardBlocked" class="form-check-input" type="checkbox">
                                <label class="form-check-label" for="IsStudentCardBlocked">
                                    Is Student Card Blocked
                                </label>
                            </div>

                        </div>
                        <div class="col-2">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label class="form-check-label" for="IsActive">
                                    Registration Enabled ?
                                </label>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-check">
                                <input asp-for="IsERegistrationComplete" class="form-check-input" type="checkbox">
                                <label class="form-check-label" for="IsERegistrationComplete">
                                    Registration Completed ?
                                </label>
                            </div>
                        </div>
                        @if (User.HasClaim("Permission", "ManageIsMedicallyFit"))
                        {

                            <div class="col-2">
                                <div class="form-check">
                                    <input asp-for="IsMedicallyFit" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" for="IsMedicallyFit">
                                        Is Medicallyfit?
                                    </label>
                                </div>
                            </div>
                        }


                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Phone">Student Phone</label>
                            <input type="text" class="form-control" asp-for="Phone" value="@Model.Phone" maxlength="9" minlength="9">
                            <span class="text-danger" asp-validation-for="Phone"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label for="category">Select Faculty</label>
                                <select id="facultyDropdown" name="facultyId" class="form-control" required>
                                    <option value="">-- Select a Faculty --</option>
                                    @foreach (var faculty in faculties)
                                    {
                                        if (Model.FacultyId
                                        == faculty.FacultyNumber)
                                        {
                                            <option value="@faculty.FacultyNumber" selected>@faculty.FacultyNameE</option>
                                        }
                                        else
                                        {
                                            <option value="@faculty.FacultyNumber">@faculty.FacultyNameE</option>

                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label>Select Department</label>
                                <select id="departmentDropdown" name="DepartmentId" class="form-control" required>
                                    <option value="">-- Select a Department --</option>
                                    @foreach (var department in departments)
                                    {
                                        if (Model.DepartmentId == department.DepartmentNumber)
                                        {
                                            <option value="@department.DepartmentNumber" selected>
                                                @department.DepartmentNameE
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@department.DepartmentNumber">@department.DepartmentNameE</option>

                                        }
                                    }
                                </select>
                            </div>
                        </div>



                        <div class="col-3">
                            <div class="form-group">
                                <label>Select Batch</label>
                                <select id="batchDropdown" name="BatchId" class="form-control" required>
                                    <option value="">-- Select a Batch --</option>
                                    @foreach (var batch in batches)
                                    {
                                        if (Model.BatchId == batch.BatchId)
                                        {
                                            <option value="@batch.BatchId" selected>@batch.BatchDescription</option>
                                        }
                                        else
                                        {
                                            <option value="@batch.BatchId">@batch.BatchDescription</option>

                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label>Select Program</label>
                                <select id="programDropdown" name="ProgramId" class="form-control" required>
                                    <option value="">-- Select a Program --</option>
                                    @foreach (var program in programs)
                                    {

                                        if (Model.ProgramId == program.ProgramId)
                                        {
                                            <option value="@program.ProgramId" selected>@program.ProgramNameE</option>
                                        }
                                        else
                                        {
                                            <option value="@program.ProgramId">@program.ProgramNameE</option>

                                        }



                                    }
                                </select>
                            </div>
                        </div>

                    </div>

                </div>





                <div class="card-footer">
                    <button type="submit" class="btn btn-primary  float-right  ml-1">Submit</button>
                    <a class="btn btn-danger  float-right" asp-controller="StudentsProfiles"
                       asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>


@if(studentPayments != null)
{
    <div class="card mt-4">
        <div class="card-header">
            <h5>Student Payment Details</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Payment Reference</th>
                        <th>Amount</th>
                        <th>Semester</th>
                        <th>Is Paid</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var registrationPayments in studentPayments.registrations)
                    {
                        <tr>
                            <td>@(registrationPayments?.PaymentReference ?? "")</td>
                            <td>@(registrationPayments?.PaymentAmount ?? "")</td>
                            <td>@(registrationPayments?.SemesterId ?? 0)</td>
                            <td class="text-center">
                                        @(registrationPayments.IsPaid == 1 ? Html.Raw("<i class='fas fa-check-circle text-success'></i>") : Html.Raw("<i class='fas fa-times-circle text-danger'></i>"))
                                    </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center mt-3">
        No payment details found.
    </div>

}


<!--OTP Codes Table-->
@if (otpCodes != null)
{
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h5>Last Generated OTP Code</h5>
                </div>
                <div class="col-6 text-right">
                    <a class="btn btn-secondary float-right"
                       asp-controller="StudentsProfiles"
                       asp-action="Edit"
                       asp-route-studentNumber="@Model.StudentNumber"
                       asp-route-decision="unblock">
                        Unblock SMS
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-bordered mt-4">
                <thead>
                    <tr>
                        <th>OTP Code</th>
                        <th>Generated At</th>
                        <th>Sent To</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@otpCodes.Code</td>
                        <td>@otpCodes.CreatedAt.ToString("g")</td>
                        <td>@otpCodes.PhoneNumber</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center mt-3">
        No OTP codes found.
    </div>
}




@section Script {


    <script>
        const fileInput = document.getElementById("fileInput");
        const personalPhoto = document.getElementById("personalPhoto");
        const resetButton = document.getElementById("resetButton");

        // Store the initial image src
        const initialSrc = personalPhoto.src;

        fileInput.addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    personalPhoto.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        resetButton.addEventListener("click", function () {
            personalPhoto.src = initialSrc;
            fileInput.value = ""; // Clear the file input
        });
    </script>

